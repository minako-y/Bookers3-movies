<div class="container">
  <div class="row">
    <div class="col-2 mr-auto ">
      <%= render 'movies/sidebar', user: @user %>
    </div>

    <!--映画一覧-->
    <div class="col-9 movies-box shadow-lg">
      <h2>Movies</h2>
      <div class="row row-cols-1 row-cols-md-3 ">
        <% @movies.each do |movie| %>
        <div class="col mb-4">
          <%= link_to movie_path(movie.id) do %>
            <div class="card h-100 shadow">
              <%= attachment_image_tag movie, :image, fallback: 'noimage_ピクト-760x460.png', class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
                <p class="card-text text-overflow-lines"><%= movie.impressions %></p>
              </div>
            </div>
          <% end %>
        </div>
         <% end %>
      </div>

    </div>

  </div>
</div>



