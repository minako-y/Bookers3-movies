<h1>User info</h1>

<%= form_with model: @user, local: true do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :introduction %><br>
  <%= f.text_area :introduction %><br>
  <%= f.label :image %><br>
  <%= f.attachment_field :profile_image %><br>
  <%= f.submit 'Update User' %>
<% end %>